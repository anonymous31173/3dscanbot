extends layout

block styles
  link(rel='stylesheet', type='text/css', href='/css/index.css')
block content
  .main
    .main-body
      .container
        .row
          .col-md-8.col-md-offset-2
            h1.brand-heading 3Dify.xyz
            p.intro-text
        .panel.panel-success
          .panel-heading
            .input-group
              span.input-group-btn
                iframe.hide(name='hiddenFrame')
                form#upload-form(action='/upload', enctype='multipart/form-data', method='post' target='hiddenFrame')
                  input(type='hidden', name='iid')
                  span.btn.btn-info.btn-file
                    | Add files
                    input(type='file', name='upload', multiple='multiple')
                  button.btn.btn-success(type='button' data-bind='click: processJob') Process
          .panel-body
            .row(data-bind='foreach: picArray')
              .col-xs-4.col-sm-1.col-lg-2
                a.thumbnail(href='#', data-bind='click: removePic')
                  .caption
                    .caption-content
                      i.fa.fa-times.fa-2x
                  img(data-bind='attr: { src: url }', alt='Generic placeholder thumbnail')
block footer
block scripts
  // Server variables
  script.
    var iid = !{iid}
  // Socket.io
  script(src='/socket.io/socket.io.js', type='text/javascript')
  script(src='js/index.js')